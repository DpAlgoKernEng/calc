{
    "version": 4,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "$env{CC}",
                "CMAKE_CXX_COMPILER": "$env{CXX}",
                "CMAKE_EXPORT_COMPILE_COMMANDS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "CMAKE_MAKE_PROGRAM": "$env{NINJA}",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            },
            "environment": {
                "CC": "$penv{CC}",
                "CXX": "$penv{CXX}",
                "NINJA": "$penv{NINJA}",
                "VCPKG_ROOT": "$penv{VCPKG_ROOT}"
            }
        },
      {
        "name": "windows-msvc-debug",
        "inherits": "default",
        "displayName": "Windows MSVC Debug",
        "description": "Windows with MSVC compiler (Debug)",
        "generator": "Ninja",
        "cmakeExecutable": "E:/VisualStudio/Common7/IDE/CommonExtensions/Microsoft/CMake/CMake/bin/cmake.exe",
        "architecture": {
          "value": "x64",
          "strategy": "external"
        },
        "environment": {
          "VCPKG_ROOT": "E:/thirdlib/vcpkg",
          "NINJA": "E:/VisualStudio/Common7/IDE/CommonExtensions/Microsoft/CMake/Ninja/ninja.exe"
        },
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "CMAKE_C_COMPILER": "cl",
          "CMAKE_CXX_COMPILER": "cl",
          "CMAKE_MAKE_PROGRAM": "E:/VisualStudio/Common7/IDE/CommonExtensions/Microsoft/CMake/Ninja/ninja.exe",
          "CMAKE_TOOLCHAIN_FILE": "E:/thirdlib/vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        "condition": {
          "type": "equals",
          "lhs": "$host.systemName",
          "rhs": "Windows"
        }
      },
        {
            "name": "linux-gcc-debug",
            "inherits": "default",
            "displayName": "Linux GCC Debug",
            "description": "Linux with GCC compiler (Debug)",
            "generator": "Ninja",
            "cmakeExecutable": "/usr/bin/cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++",
                "CMAKE_MAKE_PROGRAM": "/usr/bin/ninja",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            },
            "condition": {
                "type": "equals",
                "lhs": "$host.systemName",
                "rhs": "Linux"
            }
        },
        {
            "name": "macos-clang-debug",
            "inherits": "default",
            "displayName": "macOS Clang Debug",
            "description": "macOS with Clang compiler (Debug)",
            "generator": "Ninja",
            "cmakeExecutable": "/usr/local/bin/cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_MAKE_PROGRAM": "/usr/local/bin/ninja",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            },
            "condition": {
                "type": "equals",
                "lhs": "$host.systemName",
                "rhs": "Darwin"
            }
        },
        {
            "name": "wsl2-gcc-debug",
            "inherits": "linux-gcc-debug",
            "displayName": "WSL2 GCC Debug",
            "description": "WSL2 with GCC compiler (Debug)",
            "cmakeExecutable": "/usr/bin/cmake",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_MAKE_PROGRAM": "/usr/bin/ninja",
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            },
            "condition": {
                "type": "equals",
                "lhs": "$host.systemName",
                "rhs": "Linux"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug-windows",
            "configurePreset": "windows-msvc-debug",
            "displayName": "Build Debug (Windows)",
            "configuration": "Debug"
        },
        {
            "name": "debug-linux",
            "configurePreset": "linux-gcc-debug",
            "displayName": "Build Debug (Linux)",
            "configuration": "Debug"
        },
        {
            "name": "debug-macos",
            "configurePreset": "macos-clang-debug",
            "displayName": "Build Debug (macOS)",
            "configuration": "Debug"
        }
    ],
    "testPresets": [
        {
            "name": "test-windows",
            "configurePreset": "windows-msvc-debug",
            "displayName": "Test Debug (Windows)",
            "configuration": "Debug"
        },
        {
            "name": "test-linux",
            "configurePreset": "linux-gcc-debug",
            "displayName": "Test Debug (Linux)",
            "configuration": "Debug"
        },
        {
            "name": "test-macos",
            "configurePreset": "macos-clang-debug",
            "displayName": "Test Debug (macOS)",
            "configuration": "Debug"
        }
    ]
}